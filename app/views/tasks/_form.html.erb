<%= form_for @task, :remote => true do |f| %>
<p>
  Description:<br />
  <%= f.text_field :body %>
  </p>
  <p>
  Due Date:<br />
  <%= f.date_select(:due_date)%>

  <%= f.hidden_field(:list_id) %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  </p>

  <%= f.submit "Create Task", class: "btn btn-small btn-primary" %>

<% end %>
