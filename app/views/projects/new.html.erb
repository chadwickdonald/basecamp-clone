<div class="hero-unit">
  <%= @user.email %><br /><br />
  <%= form_for @project do |f| %>
  <p>
    Project Name:<br>
    <%= f.text_field :name, :class => "span4" %>
  </p>
  <p>
    Public: <%= f.radio_button :access, "public", :checked => true %>
  </p>
  <p>
    Private: <%= f.radio_button :access, "private"%>
  </p>
  <%= f.hidden_field :user_id %>
  <p>
    Project Description:<br>
    <%= f.text_area :description, :class => "span8", :rows => 5 %>
  </p>
    <%= f.submit "Create Project", class: "btn btn-primary btn-medium" %>


  <% end %>
</div>